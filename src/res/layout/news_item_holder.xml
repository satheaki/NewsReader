<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/news-title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumbnail"
        android:maxLines="3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:padding="5dp"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#F5F5F5"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/news-title"
        android:layout_alignStart="@+id/news-title"
        android:layout_below="@+id/news-title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="Source"
        android:fontFamily="sans-serif"
        android:paddingTop="1dp"
        android:textColor="#BDBDBD"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/source"
        android:layout_alignBaseline="@+id/source"
        android:layout_alignBottom="@+id/source"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:textColor="#BDBDBD"
        android:textSize="14dp"
        android:text="timestamp" />

    <ImageView
        android:id="@+id/expand"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ar" />


